# spatial structure
@model
nrows 1
ncols 100
layer base
categories all
min_age 1
max_age 500
age_plus_group true
initialisation_phases phase1
initial_year 1994
current_year 2008
final_year 2108
cell_length 1
time_steps step_one
age_size none

@age_size none
type none
size_weight none

@size_weight none
type none

@initialisation_phase phase1
years 200
processes recruitment m ageing

@time_step step_one
processes recruitment m move2 ageing

# population processes
@process ageing
type ageing
categories all

@process recruitment
type constant_recruitment
categories all
proportions 1.0
r0 100
age 1
layer depth

@process m
type constant_mortality_rate
categories all
m 0.13
selectivities one

@process move2
type preference
categories all
preference_functions distance-move

@preference_function distance-move
type exponential
alpha 1
layer distance
lambda 0.2

# definition of layers
@layer base
type numeric
@include "base.map"

@layer depth
type numeric
@include "depth.map"

@layer constant
type numeric
@include "constant.map"

@layer distance
type distance

# definition of selecivities
@selectivity one
type constant
c 1
